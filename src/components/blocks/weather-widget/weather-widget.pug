mixin weather-widget(props)
    .weather-widget&attributes(attributes)(data-component='weather-widget')
        .weather-widget__top
            .weather-widget__head
                .weather-widget__location
                    +svg('location').weather-widget__location-icon
                    label.weather-widget__location-city!=props.location
                .weather-widget__date!= props.date
            .weather-widget__main
                .weather-widget__info
                    +svg(props.weather.icon).weather-widget__info-icon.skeleton
                    span.weather-widget__info-degree.skeleton!=props.weather.degree
                .skeleton.weather-widget__weather
                    .weather-widget__weather-type!=props.weather.feels[0]
                    .weather-widget__feels-like!=props.weather.feels[1]
        ul.weather-widget__forecast
            each forecast in props.forecast
                li.weather-widget__forecast-item
                    span.skeleton.weather-widget__forecast-times!=forecast.times
                    .skeleton.weather-widget__forecast-info
                        +svg(forecast.icon).weather-widget__forecast-icon
                        .weather-widget__forecast-degree!=forecast.degree